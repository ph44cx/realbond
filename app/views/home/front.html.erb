<div class="row">
  <div id="newsfeed" class="col-lg-6">
    <h4><%= fa_icon "newspaper-o" %> NEWSFEED</h4>
    <div id="activities">
      <% if @activities.empty? %>
        <div class="well">
          <%= render('shared/no_resource', resources: 'Activities') %>
        </div>
      <% else %>
        <%= render_activities(@activities, layout: '/shared/activity') %>
      <% end %>
    </div>
    <%= render 'shared/paginate', resources: @activities %>
  </div>
  <div id="intro" class="col-lg-6">
    <h1>Realbond</h1>
    <p>Realbond is an open source social networking app written using <%= fa_icon 'diamond' %> Ruby on Rails.</p>
    <hr>
    <a href="#" class="btn btn-warning">
      <%= fa_icon 'wpforms' %> credit
    </a>
    <a href="#" class="btn btn-primary">
      <%= fa_icon 'info-circle' %> more info
    </a>
  </div>
</div>
